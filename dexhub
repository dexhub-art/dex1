# FLY

```_G.flyEnabled = true

local p = game.Players.LocalPlayer
local c = p.Character or p.CharacterAdded:Wait()
local root = c:WaitForChild("HumanoidRootPart")
local hum = c:FindFirstChildOfClass("Humanoid")

local flying, speed = false, 0
local maxSpeed, accel = 50, 2
local controls = { f=0, b=0, l=0, r=0, u=0, d=0 }
local bg, bv

local cam = workspace.CurrentCamera
local mouse = p:GetMouse()

local function StartFly()
    if not _G.flyEnabled or not root then return end
    flying = true
    bg = Instance.new("BodyGyro", root)
    bg.P, bg.maxTorque, bg.CFrame = 9e4, Vector3.new(9e9,9e9,9e9), root.CFrame

    bv = Instance.new("BodyVelocity", root)
    bv.velocity = Vector3.zero
    bv.maxForce = Vector3.new(9e9,9e9,9e9)

    hum.PlatformStand = true

    while flying and _G.flyEnabled do
        task.wait()
        local dir = Vector3.zero
        if controls.f + controls.b ~= 0 or controls.l + controls.r ~= 0 or controls.u + controls.d ~= 0 then
            speed = math.min(speed + accel, maxSpeed)
        else
            speed = math.max(speed - accel, 0)
        end
        dir = cam.CFrame.LookVector * (controls.f + controls.b)
        + cam.CFrame.RightVector * (controls.l + controls.r)
        + Vector3.new(0,1,0) * (controls.u + controls.d)
        if dir.Magnitude > 0 then dir = dir.Unit * speed end

        bv.Velocity = dir
        bg.CFrame = cam.CFrame
    end

    bg:Destroy()
    bv:Destroy()
    hum.PlatformStand = false
    flying = false
end

mouse.KeyDown:Connect(function(k)
    if not _G.flyEnabled then return end
    k = k:lower()
    if k == "e" then
        if flying then flying = false else StartFly() end
    elseif k == "w" then controls.f = 1
    elseif k == "s" then controls.b = -1
    elseif k == "a" then controls.l = -1
    elseif k == "d" then controls.r = 1
    elseif k == "space" then controls.u = 1
    elseif k == "leftcontrol" then controls.d = -1
    end
end)

mouse.KeyUp:Connect(function(k)
    k = k:lower()
    if k == "w" then controls.f = 0
    elseif k == "s" then controls.b = 0
    elseif k == "a" then controls.l = 0
    elseif k == "d" then controls.r = 0
    elseif k == "space" then controls.u = 0
    elseif k == "leftcontrol" then controls.d = 0
    end
end)```